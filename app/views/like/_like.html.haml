- if current_user != @post.user
  %span.like
    - if @post.like?(current_user)
      = form_for(@post.likes.find(user_id: current_user.id), method: :delete, remote: true) do |f|
        = button_tag(class: "btn btn-default btn-xs") do
          = content_tag :span, "#", class: "fas fa-heart"
    - else
      -# = button_to 'いいね', like_index_path(@post), method: :post, remote: true
        
      = form_for(@post.likes.build, remote: true) do |f|
        %div= hidden_field_tag :post_id, @post.id
        = button_tag(class: "btn btn-default btn-xs") do
          = content_tag :span, "#", class: "far fa-heart"
